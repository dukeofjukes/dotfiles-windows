{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:white",
          "template": "<p:yellow>{{ .UserName }}</> at <p:cyan>{{ .HostName }}</> in "
        },
        {
          "type": "path",
          "foreground": "p:orange",
          "properties": {
            "home_icon": "~",
            "style": "folder"
          },
          "style": "plain",
          "template": "{{ path .Path .Location }}"
        },
        {
          "type": "git",
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:red{{ end }}",
            "{{ if gt .Ahead 0 }}p:purple{{ end }}",
            "{{ if gt .Behind 0 }}p:purple{{ end }}"
          ], 
          "style": "plain",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "branch_icon": ""
          },
          "template": " <p:white>on</> {{ if .UpstreamURL }}{{ url .HEAD .UpstreamURL }}{{ else }}{{ .HEAD }}{{ end }} {{ if .Working.Added }}[+{{.Working.Added}}] {{ end }}{{ if .Working.Deleted }}[-{{.Working.Deleted}}] {{ end }}{{ if .Working.Modified }}[~{{.Working.Modified}}] {{ end }}"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "foreground": "p:white",
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": ">"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "palette": {
    "black": "#3B4252",
    "blue": "#81A1C1",
    "cyan": "#88C0D0",
    "green": "#A3BE8C",
    "orange": "#D08770",
    "red": "#BF616A",
    "white": "#E5E9F0",
    "yellow": "#EBCB8B",
    "purple": "#B48EAD"
  },
  "__default_omp_palette": {
    "black": "#262B44",
    "blue": "#4B95E9",
    "green": "#59C9A5",
    "orange": "#F07623",
    "red": "#D81E5B",
    "white": "#E0DEF4",
    "yellow": "#F3AE35"
  },
  "__palenight_palette": {
    "black": "#000300",
    "blue": "#82aaff",
    "cyan": "#89ddff",
    "green": "#c3e88d",
    "orange": "#f78c6c",
    "red": "#f07178",
    "white": "#eeffff",
    "yellow": "#ffcb6b",
    "purple": "#c792ea"
  },
  "__nord_palette": {
    "black": "#3B4252",
    "blue": "#81A1C1",
    "cyan": "#88C0D0",
    "green": "#A3BE8C",
    "orange": "#D08770",
    "red": "#BF616A",
    "white": "#E5E9F0",
    "yellow": "#EBCB8B",
    "purple": "#B48EAD"
  },
  "version": 2
}